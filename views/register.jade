doctype html
html(data-ng-app="TPCv4")
    head
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
        link(rel="stylesheet", href="/stylesheets/loginRegister.css")
        script(type="text/javascript", src="/javascripts/vendor/jquery/jquery.min.js")
        script(type="text/javascript", src="/javascripts/deploy/loginBuilt.min.js")
    body
    include header
    div(id="registerDiv" class="container")
        div(class="row")
            div(class="col-md-6 col-lg-offset-3")
                div(class="panel panel-primary")
                    div(class="panel-heading")
                        div(class="panel-title")
                        | Register New User
                    div(class="panel-body")
                        form(class="form-horizontal", role="form", action="/api/users", method="post")
                            div(class="form-group")
                                label(for="username", name="username", class="control-label col-md-3") Username:
                                div(class="col-md-9")
                                    input(id="username", name="username" ,class="form-control", placeholder="Enter New Username")
                            div(class="form-group")
                                label(for="password", name="password" class="control-label col-md-3") Password:
                                div(class="col-md-9")
                                    input(id="password", name="password" type="password", class="form-control", placeholder="Enter New Password")
                            div(class="form-group")
                                div(class="col-md-offset-2 col-md-10")
                                    button(type="submit", class="btn btn-primary pull-right") Register

