doctype html
html(data-ng-app="TPC")
    head
        meta(name='viewport', content='initial-scale=1')
        title= title
        link(type="text/css", rel="stylesheet", href="/javascripts/vendor/angular-material/angular-material.min.css")
        link(type="text/css", rel="stylesheet", href="/stylesheets/index.css")

    body(layout="column" ng-controller="MaterialController")
